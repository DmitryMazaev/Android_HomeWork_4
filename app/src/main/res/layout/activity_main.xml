<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userIntarface">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/userImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:endIconMode="clear_text"
        android:hint="Имя пользователя" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userForEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="40"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/userTelephone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Телефон"
        android:background="#03DAC5"
        android:inputType="phone"
        android:maxLength="40"
        style="@style/bigTextStyle"
        />
    <TextView
        android:id="@+id/userSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/userTelephone"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Пол"
        style="@style/bigTextStyle"
        />
    <RadioGroup
        android:id="@+id/userSexRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/userSex"
        app:layout_constraintStart_toStartOf="parent" >

        <RadioButton
            android:id="@+id/radioButtonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="М"
            />
        <RadioButton
            android:id="@+id/radioButtonTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Ж"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/userNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/userSexRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Получать уведомления"
        style="@style/bigTextStyle"
        />
    <Switch
        android:id="@+id/switchUserNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/userNotification"
        app:layout_constraintTop_toTopOf="@+id/userNotification"
        app:layout_constraintBottom_toBottomOf="@+id/userNotification"
        android:checked="false"
        tools:ignore="UseSwitchCompatOrMaterialXml" />
    <CheckBox
        android:id="@+id/checkBoxOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/switchUserNotification"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:checked="false"
        />
    <TextView
        android:id="@+id/textToCheckBoxOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/checkBoxOne"
        app:layout_constraintTop_toTopOf="@+id/checkBoxOne"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxOne"
        android:text="Об авторизации на устройстве"
        style="@style/smallTextStyle"/>
    <CheckBox
        android:id="@+id/checkBoxTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxOne"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:checked="false"
        />
    <TextView
        android:id="@+id/textToCheckBoxTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/checkBoxTwo"
        app:layout_constraintTop_toTopOf="@+id/checkBoxTwo"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxTwo"
        android:text="О новинках и предложениях"
        style="@style/smallTextStyle"/>
    <TextView
        android:id="@+id/balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/checkBoxTwo"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxTwo"
        android:text="Баллы"
        android:layout_marginVertical="10dp"
        style="@style/bigTextStyle"/>
    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/userTelephone"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxTwo"
        android:text="0/100"
        android:layout_marginVertical="10dp"
        style="@style/bigTextStyle"
        android:textColor="#444444"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balls"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:progress="44"
        />
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/balls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:text="Сохранить"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>